{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["packages/types/src/*"],
      "@utils/*": ["packages/utils/src/*"],
      "@cl/types": ["packages/types/src/index.ts"],
      "@cl/utils": ["packages/utils/src/index.ts"],
      "@cl/db": ["packages/db/src/index.ts"]
    }
  }
}
