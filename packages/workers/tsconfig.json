{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cl/db": ["../db/dist/index.d.ts"],
      "@cl/types": ["../types/dist/index.d.ts"],
      "@cl/utils": ["../utils/dist/index.d.ts"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../db" }
  ]
}
