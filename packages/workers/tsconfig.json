{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../..",
    "paths": {
      "@cl/db": ["packages/db/dist"],
      "@cl/types": ["packages/types/dist"],
      "@cl/utils": ["packages/utils/dist"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../db" }
  ]
}
